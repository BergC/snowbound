{
    "name": "heroku-cra-node",
    "version": "3.0.0",
    "description": "How to use create-react-app with a custom Node API on Heroku",
    "engines": {
        "node": "10.x"
    },
    "scripts": {
        "start": "node server",
        "build": "cd react-ui/ && npm install && npm run build",
        "server": "nodemon server",
        "dev": "concurrently \"npm run server\" \"cd react-ui && npm start\""
    },
    "cacheDirectories": [
        "node_modules",
        "react-ui/node_modules"
    ],
    "dependencies": {
        "axios": "^0.19.2",
        "concurrently": "^5.2.0",
        "dotenv": "^8.2.0",
        "express": "^4.16.4",
        "express-validator": "^6.4.1",
        "mongoose": "^5.9.13",
        "nodemon": "^2.0.3"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mars/heroku-cra-node.git"
    },
    "keywords": [
        "node",
        "heroku",
        "create-react-app",
        "react"
    ],
    "license": "MIT",
    "devDependencies": {}
}
